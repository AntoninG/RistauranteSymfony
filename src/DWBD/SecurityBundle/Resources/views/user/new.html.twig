{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>User creation</h1>
        </div>
        <div class="col-sm-2 pull-right p-t-25 inline-block">
            <a href="{{ path('user_index') }}" class="btn btn-link"><span aria-hidden="true">&larr;</span> Back to the list</a>
        </div>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username) }}
        </div>

        <div class="form-group col-sm-6">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(form.password.first) }}
            {{ form_errors(form.password.first) }}
            {{ form_widget(form.password.first) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.password.second) }}
            {{ form_errors(form.password.second) }}
            {{ form_widget(form.password.second) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(form.role) }}
            {{ form_errors(form.role) }}
            {{ form_widget(form.role) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <button type="submit" value="Create" class="btn btn-primary" title="Create user">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                Create
            </button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
