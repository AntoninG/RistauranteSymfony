{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 inline-block">
            <h1>Users {% if users is not empty %}{{ number }}{% endif %}</h1>
        </div>
        <div class="col-sm-1 pull-right p-t-25 inline-block">
            <a href="{{ url('user_new') }}" title="New user" class="btn btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
            </a>
        </div>
    </div>

    {% if users is not empty %}
        {% include ':table:pagination.html.twig' with {'route':'user_index'} %}

        <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role|join(', ') }}</td>
                    <td>
                        <a href="{{ path('user_show', { 'id': user.id }) }}" title="Show user"
                           class="btn btn-info btn-sm">
                            <i class="fa fa-search-plus" aria-hidden="true"></i>
                            Show
                        </a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" title="Edit user"
                           class="btn btn-primary btn-sm">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            Edit
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <div class="well well-lg text-center"><p>No users available.</p></div>
    {% endif %}
    </div>

    {% if users is not empty %}
        {% include ':table:pagination.html.twig' with {'route':'user_index'} %}
    {% endif %}
{% endblock %}
