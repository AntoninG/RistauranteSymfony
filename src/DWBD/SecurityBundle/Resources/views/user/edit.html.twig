{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>User edit</h1>
        </div>
        <div class="col-sm-2 pull-right p-t-25 inline-block">
            <a href="{{ path('user_index') }}" class="btn btn-link"><span aria-hidden="true">&larr;</span> Back to the list</a>
        </div>
    </div>

    {{ form_start(edit_form) }}

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(edit_form.username) }}
            {{ form_errors(edit_form.username) }}
            {{ form_widget(edit_form.username) }}
        </div>

        <div class="form-group col-sm-6">
            {{ form_label(edit_form.email) }}
            {{ form_errors(edit_form.email) }}
            {{ form_widget(edit_form.email) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(edit_form.password.first) }}
            {{ form_errors(edit_form.password.first) }}
            {{ form_widget(edit_form.password.first) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(edit_form.password.second) }}
            {{ form_errors(edit_form.password.second) }}
            {{ form_widget(edit_form.password.second) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(edit_form.roles) }}
            {{ form_errors(edit_form.roles) }}
            {{ form_widget(edit_form.roles) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <button type="submit" value="Edit" class="btn btn-primary" title="Edit the user">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                Edit
            </button>
        </div>
    </div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <div class="form-group">
        <button type="submit" value="Delete" class="btn btn-danger" title="Delete the user">
            <i class="fa fa-trash" aria-hidden="true"></i>
            Delete
        </button>
    </div>
    {{ form_end(delete_form) }}

{% endblock %}
