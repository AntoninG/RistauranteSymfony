{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/jquery.timepicker.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>New reservation</h1>
        </div>
    </div>


    {{ form_start(form) }}
    <div class="row">
        <div class="form-group col-xs-6">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group col-xs-3">
            {{ form_label(form.date) }}
            {{ form_errors(form.date) }}
            {{ form_widget(form.date) }}
        </div>

        <div class="form-group col-xs-3">
            {{ form_label(form.time) }}
            {{ form_errors(form.time) }}
            {{ form_widget(form.time) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-4">
            {{ form_label(form.number) }}
            {{ form_errors(form.number) }}
            {{ form_widget(form.number) }}
        </div>

        <div class="form-group col-xs-4">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>

        <div class="form-group col-xs-4">
            {{ form_label(form.phone) }}
            {{ form_errors(form.phone) }}
            {{ form_widget(form.phone) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <button type="submit" value="Create" class="btn btn-primary" title="Save reservation">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.timepicker.js') }}" rel="script"></script>

    <script type="text/javascript">
        $('#{{ form.time.vars.id }}').timepicker({
        	'timeFormat': 'H:i',
			'minTime': '08:00',
			'maxTime': '21:00',
			'step': 15
        });

		$("#{{ form.date.vars.id }}").datepicker({
			dateFormat: "dd/mm/yy",
			minDate: +1,
            maxDate: "+1Y"
		});
    </script>
{% endblock %}
