{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>
                {{ menu.title }}
                {% if is_granted('ROLE_EDITOR') %}
                    {% if menu.state == 1 %}
                        {% set class_color = 'info' %}
                    {% elseif menu.state == 2 %}
                        {% set class_color = 'warning' %}
                    {% elseif menu.state == 3 %}
                        {% set class_color = 'danger' %}
                    {% elseif menu.state == 4 %}
                        {% set class_color = 'success' %}
                    {% endif %}
                    (<span class="text-{{ class_color }}">{{ states[menu.state] }}</span>)
                {% endif %}
            </h1>
        </div>
        <div class="col-sm-2 pull-right p-t-25 inline-block">
            <a href="{{ path('menus_index') }}" class="btn btn-link"><span aria-hidden="true">&larr;</span>
                Back to the list
            </a>
        </div>
    </div>

    <div class="spacer"></div>

    <div class="row">
        <div class="col-xs-4">
            <p class="lead"><strong>Price : </strong> {{ menu.price }} â‚¬</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <p class="text-muted">By {{ menu.author.username }}</p>
        </div>
    </div>

    {% if is_granted('ROLE_EDITOR') %}
        <div class="row">
            <div class="col-sm-1">
                <a href="{{ path('menus_edit', { 'id': menu.id }) }}" class="btn btn-primary" title="Edit dish">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    Edit
                </a>
            </div>
            <div class="col-sm-1 pull-right">
                {{ form_start(delete_form) }}
                <button type="submit" value="Delete" class="btn btn-danger" title="Delete dish">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    Delete
                </button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}
