{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>Menu creation</h1>
        </div>
        <div class="col-sm-2 pull-right p-t-25 inline-block">
            <a href="{{ path('menus_index') }}" class="btn btn-link"><span aria-hidden="true">&larr;</span> Back to the
                list</a>
        </div>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(form.title) }}
            {{ form_errors(form.title) }}
            {{ form_widget(form.title) }}
        </div>

        <div class="form-group col-sm-3">
            {{ form_label(form.price) }}
            {{ form_errors(form.price) }}
            {{ form_widget(form.price) }}
        </div>

        <div class="form-group col-sm-3">
            {{ form_label(form.displayOrder) }}
            {{ form_errors(form.displayOrder) }}
            {{ form_widget(form.displayOrder) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            {{ form_label(form.dishes) }}
            {{ form_errors(form.dishes) }}
            {{ form_widget(form.dishes) }}
        </div>

        <div class="form-group col-xs-12 col-md-6">
            {{ form_label(form.state) }}
            {{ form_errors(form.state) }}
            {{ form_widget(form.state) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <button type="submit" value="Create" class="btn btn-primary" title="Create menu">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                Create
            </button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
