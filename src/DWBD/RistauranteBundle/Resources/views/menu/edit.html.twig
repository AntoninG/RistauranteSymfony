{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-4 inline-block">
            <h1>Menu edit</h1>
        </div>
        <div class="col-sm-2 pull-right p-t-25 inline-block">
            <a href="{{ path('menus_index') }}" class="btn btn-link"><span aria-hidden="true">&larr;</span> Back to the
                list</a>
        </div>
    </div>

    {{ form_start(edit_form) }}

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_label(edit_form.title) }}
            {{ form_errors(edit_form.title) }}
            {{ form_widget(edit_form.title) }}
        </div>

        <div class="form-group col-sm-3">
            {{ form_label(edit_form.price) }}
            {{ form_errors(edit_form.price) }}
            {{ form_widget(edit_form.price) }}
        </div>

        <div class="form-group col-sm-3">
            {{ form_label(edit_form.displayOrder) }}
            {{ form_errors(edit_form.displayOrder) }}
            {{ form_widget(edit_form.displayOrder) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            {{ form_label(edit_form.dishes) }}
            {{ form_errors(edit_form.dishes) }}
            {{ form_widget(edit_form.dishes) }}
        </div>

        <div class="form-group col-xs-12 col-md-6">
            {{ form_label(edit_form.state) }}
            {{ form_errors(edit_form.state) }}
            {{ form_widget(edit_form.state) }}
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <button type="submit" value="Create" class="btn btn-primary" title="Create dish">
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                Create
            </button>
        </div>
    </div>

    {{ form_end(edit_form) }}


    {{ form_start(delete_form) }}
    <div class="form-group">
        <button type="submit" value="Delete" class="btn btn-danger" title="Delete dish">
            <i class="fa fa-trash" aria-hidden="true"></i>
            Delete
        </button>
    </div>
    {{ form_end(delete_form) }}

{% endblock %}
