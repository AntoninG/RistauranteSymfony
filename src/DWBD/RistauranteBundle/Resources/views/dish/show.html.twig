{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dish</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ dish.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dish.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ dish.price }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ dish.state }}</td>
            </tr>
            <tr>
                <th>Homemade</th>
                <td>{% if dish.homemade %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ dish.image }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ dish.category }}</td>
            </tr>
            <tr>
                <th>Allergens</th>
                <td>{% if dish.allergens %}{{ dish.allergens|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dish_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dish_edit', { 'id': dish.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
